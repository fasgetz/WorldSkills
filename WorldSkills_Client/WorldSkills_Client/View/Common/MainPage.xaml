                    <Label Content="Москва, Россия" FontSize="24" Foreground="Gray"/>
                    <Label x:Name="lbdate" FontSize="24" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Height="470">
                <StackPanel>
                    <Button Content="Я хочу стать бегуном" Margin="300 35" Height="60" FontSize="20"/>
                    <Button Content="Я хочу стать спонсором бегуна" Margin="300 25" Height="60" FontSize="20" Click="Sponsored_Click"/>
                    <Button Content="Я хочу узнать больше о событии" Margin="300 25" Height="60" FontSize="20"/>
                    <Button Content="Авторизация" Margin="300 25" Height="60" FontSize="20" Click="Authorization_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
